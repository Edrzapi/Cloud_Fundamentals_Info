# This sets the name that will show up in the GitHub Actions UI
name: Hello World Workflow

# This defines when the workflow should be triggered
on:
  push:            # Trigger when a push happens...
    branches:      # ...on the following branches
      - main

# This is the main jobs section â€“ each job runs in its own virtual environment
jobs:
  say_hello:                        # Name of the job
    runs-on: ubuntu-latest         # The OS/environment the job will run on

    steps:                         # Sequence of steps to run inside the job
      - name: Checkout code
        uses: actions/checkout@v3  # Step 1: Checkout the repo's code

      - name: Say Hello
        run: echo "Hello, world!"  # Step 2: Run a simple shell command
